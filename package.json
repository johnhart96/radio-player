{
  "name": "radio-player",
  "version": "1.0.0",
  "description": "Internet Radio player",
  "main": "index.js",
  "scripts": {
    "start": "DEBUG=true electron .",
    "dist:macos": "electron-builder --mac --x64 --arm64",
    "dist:win": "electron-builder --win --x64 --ia32 --arm64",
    "dist:linux": "electron-builder --x64 --ia32 --arm64",
    "publish:macos": "electron-builder --mac --publish always",
    "publish:win": "electron-builder --publish always",
    "publish:linux": "electron-builder --publish always"
  },
  "author": "John Hart",
  "license": "apache2",
  "dependencies": {
    "bootstrap": "^5.1.1"
  },
  "devDependencies": {
    "electron": "^14.0.1",
    "electron-builder": "^22.10.5"
  },
  "build": {
    "appId": "com.johnhart.radioplayer",
    "directories": {
      "output": "build"
    },
    "productName": "Radio Player",
    "mac": {
      "darkModeSupport": true,
      "icon": "images/icon.png"
    },
    "win": {
      "target": "NSIS"
    },
    "nsis": {
      "perMachine": true,
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true
    }
  }
}
